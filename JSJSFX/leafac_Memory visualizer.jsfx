@init

instance.buffer = 0;
init.index = -1; loop(100, init.index += 1;
  instance.buffer[init.index] = 1000 + init.index;
);

@gfx

gfx.columns = 16;
gfx.width = 50;
gfx.height = 10;
gfx.digits = 0;

gfx_set(1);
gfx.index = -1; loop(100, gfx.index += 1;
  gfx.x = gfx.index % gfx.columns;
  gfx.y = floor(gfx.index / gfx.columns);
  gfx_x = gfx.x * gfx.width;
  gfx_y = gfx.y * gfx.height;
  gfx_drawnumber(buffer[gfx.index], gfx.digits);
);
